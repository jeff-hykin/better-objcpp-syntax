#!/usr/bin/env bash

npx textmate-tester \
    --textmateExtension objcpp \
    --syntax "$FORNIX_FOLDER/autogenerated/objcpp.tmLanguage.json" \
    --examples "$FORNIX_FOLDER/language_examples/" \
    --supportSyntaxes '{ "source.c": "'"$FORNIX_FOLDER"'/syntaxes/c.tmLanguage.json" }' \
    generate-specs --all